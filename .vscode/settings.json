{
  "typescript.tsdk": "node_modules/typescript/lib",
  "biome.enabled": true,
  "prettier.enable": false,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "[typescript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescriptreact]": { "editor.defaultFormatter": "biomejs.biome" },
  "[css]": { "editor.defaultFormatter": "biomejs.biome" },
  "[cssmodules]": { "editor.defaultFormatter": "biomejs.biome" },
  "[tailwindcss]": { "editor.defaultFormatter": "biomejs.biome" },
  "[postcss]": { "editor.defaultFormatter": "biomejs.biome" },
  "[json]": { "editor.defaultFormatter": "biomejs.biome" },
  "[jsonc]": { "editor.defaultFormatter": "biomejs.biome" },
  "[vue]": { "editor.defaultFormatter": "biomejs.biome" },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.classAttributes": ["class", "ui"],
  "tailwindCSS.experimental.classRegex": [
    ["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "workbench.colorCustomizations": {
    "sash.hoverBorder": "#0d9488",
    "statusBar.background": "#3D423D",
    "statusBar.foreground": "#E8E8E8",
    "statusBarItem.hoverBackground": "#3D423D",
    "statusBarItem.remoteBackground": "#E49C03",
    "statusBarItem.remoteForeground": "#292929",
    "statusBarItem.remoteHoverBackground": "#E49C03",
    "statusBarItem.remoteHoverForeground": "#292929",
    "tab.activeBorder": "#3D423D",
    "titleBar.activeBackground": "#3D423D",
    "titleBar.activeForeground": "#E8E8E8",
    "titleBar.inactiveBackground": "#3D423D",
    "titleBar.inactiveForeground": "#E8E8E8"
  }
}
